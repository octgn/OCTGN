<controls:WizardPage  xmlns:controls="clr-namespace:Octgn.GameWizard.Controls"
                      x:Class="Octgn.GameWizard.Pages.FinalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Octgn.GameWizard.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game Created">

    <StackPanel>
        <TextBlock>Your game has been created</TextBlock>
        <Rectangle Height="10"/>
        <TextBlock>You can find your game at <Hyperlink Click="Hyperlink_Click"><Run Text="{Binding Directory}"></Run></Hyperlink></TextBlock>
    </StackPanel>
</controls:WizardPage>
