                        <TextBox Text="{Binding Path=Version, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </controls:Field>
            </StackPanel>
        </Expander>-->
    </StackPanel>
</controls:WizardPage>
