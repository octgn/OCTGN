<UserControl x:Class="Octgn.Controls.HostGameSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:Octgn.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300"
             Panel.ZIndex="5">
    <Border x:Name="BorderHostGame" Width="300" MinHeight="200" Visibility="Visible" Padding="10,10,10,10" Style="{StaticResource Panel}">
        <Border.Background>
            <LinearGradientBrush EndPoint="0,0" StartPoint="1,0">
                <LinearGradientBrush.Transform>
                    <RotateTransform Angle="-22" CenterY="0.5" CenterX="0.5"/>
                </LinearGradientBrush.Transform>
                <GradientStop Color="#FF333333" Offset="0.558"/>
                <GradientStop Color="#FF555555" Offset="1"/>
                <GradientStop Color="#FF777777" Offset="0"/>
                <GradientStop Color="#FF555555" Offset="0.154"/>
                <GradientStop Color="#FF333333" Offset="0.351"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions >
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="85"></ColumnDefinition>
                <ColumnDefinition Width="100*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">Host A Game</Label>
            <Label Grid.Row="1" Grid.ColumnSpan="2" Foreground="Firebrick" Margin="0,10,0,10" Content="{Binding Error, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:HostGameSettings}}}"/>
            <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="CheckBoxIsLocalGame" Content="Local Game" FlowDirection="RightToLeft" HorizontalAlignment="Left" IsEnabled="{Binding LocalGameCheckboxEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:HostGameSettings}}}">
            </CheckBox>
            <Label Grid.Row="4" Grid.Column="0">Game Name</Label>
            <Grid Grid.Row="4" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TextBoxGameName" Grid.ColumnSpan="2"/>
                <Button x:Name="ButtonRandomizeGameName" Grid.Column="1" Click="ButtonRandomizeGameNameClick">
                    <Image Source="/OCTGN;component/Resources/randomname.png" Stretch="None"></Image>
                </Button>
            </Grid>
            <Label Grid.Row="6" Grid.Column="0">Password</Label>
            <PasswordBox Grid.Row="6" Grid.Column="1" x:Name="PasswordGame" IsEnabled="False"></PasswordBox>
            <Label Grid.Row="8" Grid.Column="0">Game</Label>
            <ComboBox Grid.Row="8" Grid.Column="1" x:Name="ComboBoxGame" ItemsSource="{Binding Games, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:HostGameSettings}}}"></ComboBox>
            <Button Grid.Row="10" Grid.Column="0" Width="50" HorizontalAlignment="Left" Click="ButtonCancelClick" Content="Cancel"></Button>
            <Button Grid.Row="10" Grid.Column="1" Width="50" HorizontalAlignment="Right" Click="ButtonHostGameStartClick" Content="Start"></Button>
            <ProgressBar Grid.Row="9" Grid.ColumnSpan="2" x:Name="ProgressBar" Height="20" VerticalAlignment="Bottom" Visibility="Hidden" Margin="0,5,0,5" IsIndeterminate="True"></ProgressBar>
        </Grid>
    </Border>
</UserControl>
