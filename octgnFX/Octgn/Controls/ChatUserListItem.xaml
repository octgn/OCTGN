<UserControl x:Class="Octgn.Controls.ChatUserListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="200"
             x:Name="Me" DataContext="{Binding ElementName=Me}" Height="25"
             Style="{x:Null}">
    <ContentControl Style="{DynamicResource ChatUserListItem}">
        <Grid VerticalAlignment="Center" Margin="5,0,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="ImageSub" Source="../Resources/sub.png" Width="16" Height="16" VerticalAlignment="Center" Grid.Column="0"
               Visibility="{Binding IsSub,Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Image x:Name="ImageOwner" Source="../Resources/owner.png" Width="16" Height="16" VerticalAlignment="Center" Grid.Column="1"
               Visibility="{Binding IsOwner,Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Image x:Name="ImageAdmin" Source="../Resources/admin.png" Width="16" Height="16" VerticalAlignment="Center" Grid.Column="2"
               Visibility="{Binding IsAdmin,Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Image x:Name="ImageMod" Source="../Resources/moderator.png" Width="16" Height="16" VerticalAlignment="Center" Grid.Column="3" Visibility="Collapsed"/>
            <TextBlock x:Name="UserNameTextBox" Grid.Column="4" Foreground="White"
                DataContext="{Binding Path=User}" Text="{Binding Path=UserName}"/>
        </Grid>
    </ContentControl>
</UserControl>
