  <Style x:Key="ClosableTabItem" TargetType="{x:Type TabItem}" BasedOn="{StaticResource {x:Type TabItem}}">
    <Setter Property="Background" Value="#969D9D9D" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type TabItem}">
          <Border Name="Border" Style="{StaticResource Panel}" Background="{TemplateBinding Background}"
                  CornerRadius="2,2,0,0" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
              <ContentPresenter x:Name="ContentSite" ContentSource="Header" Margin="10,1,10,1"
                                RecognizesAccessKey="False" />
              <Button VerticalAlignment="Center" Margin="0,2,5,0" Cursor="Hand"
                      Command="{x:Static ctrl:TabCommands.CloseTabCommand}">
                <Button.Template>
                  <ControlTemplate>
                    <Border Background="Transparent">
                      <Path Data="M 0,0 L 10,10 M 10,0 L 0,10" Stroke="#e84000" StrokeThickness="3" />
                    </Border>
                    <ControlTemplate.Triggers>
                      <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Visibility" Value="Collapsed" />
                      </Trigger>
                    </ControlTemplate.Triggers>
                  </ControlTemplate>
                </Button.Template>
              </Button>
            </StackPanel>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
              <Setter Property="Panel.ZIndex" Value="100" />
              <Setter Property="Background" TargetName="Border" Value="#96EEEEEE" />
              <Setter Property="BorderBrush" TargetName="Border" Value="#B3E8E8E8" />
              <Setter Property="BorderThickness" TargetName="Border" Value="1,1,1,0" />
              <Setter Property="TextBlock.FontWeight" TargetName="ContentSite" Value="Bold" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="EditableTabControl" TargetType="{x:Type TabControl}" BasedOn="{StaticResource {x:Type TabControl}}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type TabControl}">
          <Grid KeyboardNavigation.TabNavigation="Local">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
              <StackPanel.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource ClosableTabItem}" />
              </StackPanel.Resources>
              <TabPanel Name="HeaderPanel" Background="Transparent" Margin="0,0,4,0" IsItemsHost="True"
                        KeyboardNavigation.TabIndex="1" VerticalAlignment="Stretch" />
              <Button VerticalAlignment="Stretch" Command="{x:Static ctrl:TabCommands.NewTabCommand}" Cursor="Hand">
                <Button.Template>
                  <ControlTemplate>
                    <Border Name="Border" Style="{StaticResource Panel}" Background="#969D9D9D" Padding="7,3"
                            CornerRadius="2,2,0,0" BorderThickness="1">
                      <Path Data="M 5,0 L 5,10 M 0,5 L 10,5" Stroke="#00c860" StrokeThickness="3" />
                    </Border>
                  </ControlTemplate>
                </Button.Template>
              </Button>
            </StackPanel>
            <Border Name="Border" Grid.Row="1" Style="{StaticResource Panel}" BorderThickness="1,0,1,1"
                    CornerRadius="0,10,10,10" KeyboardNavigation.TabNavigation="Local" KeyboardNavigation.DirectionalNavigation="Contained"
                    KeyboardNavigation.TabIndex="2">
              <ContentPresenter Name="PART_SelectedContentHost" Margin="5" ContentSource="SelectedContent" />
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>