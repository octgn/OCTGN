  <Style x:Key="InsideTabs" TargetType="{x:Type TabControl}">
    <Setter Property="OverridesDefaultStyle" Value="True" />
    <Setter Property="SnapsToDevicePixels" Value="True" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type TabControl}">
          <Grid KeyboardNavigation.TabNavigation="Local">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TabPanel Name="HeaderPanel" Grid.Row="0" Margin="0,0,4,0" Background="Transparent" IsItemsHost="True"
                      KeyboardNavigation.TabIndex="1" />
            <Border Name="Border" Grid.Row="1" Style="{StaticResource Panel}" BorderThickness="1,0,1,1"
                    CornerRadius="0,2,2,2" KeyboardNavigation.TabNavigation="Local" KeyboardNavigation.DirectionalNavigation="Contained"
                    KeyboardNavigation.TabIndex="2">
              <ContentPresenter Name="PART_SelectedContentHost" Margin="0" ContentSource="SelectedContent" />
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>


