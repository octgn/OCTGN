  <Style x:Key="ScrollBarThumb" TargetType="Thumb">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Thumb">
          <Border Style="{StaticResource PanelControl}" BorderBrush="#E0999999" />
