<controls:DecorableWindow x:Class="Octgn.Scripting.Controls.ChoiceDlg" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Octgn.Controls"
        Style="{StaticResource Window}" MinWidth="330" CanResize="False"
        SizeToContent="WidthAndHeight"  ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">

    <StackPanel Orientation="Vertical" x:Name="choiceWindow">
        <Border Style="{StaticResource DarkPanel}" Margin="8">
            <ScrollViewer MaxHeight="300" MaxWidth="330" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="promptLbl" Margin="16,8,16,8" Text="Prompt" />
            </ScrollViewer>
        </Border>
        <Border Style="{StaticResource DarkPanel}" Margin="8">
            <ScrollViewer MaxHeight="400" MaxWidth="330" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" x:Name="buttonField">
                </StackPanel>
            </ScrollViewer>
        </Border>
        <StackPanel Orientation="Horizontal" x:Name="customField">
        </StackPanel>
    </StackPanel>
</controls:DecorableWindow>