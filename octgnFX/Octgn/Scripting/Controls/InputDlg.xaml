<Window x:Class="Octgn.Scripting.Controls.InputDlg" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Style="{StaticResource DialogWindow}" Width="300"
        SizeToContent="Height" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
  <StackPanel Orientation="Vertical">

    <Border Style="{StaticResource Panel}" Margin="8">
      <StackPanel Orientation="Vertical">
        <TextBlock x:Name="promptLbl" Margin="16,8,16,8" Text="Prompt" />
        <TextBox x:Name="inputBox" Margin="16,0,16,8" TabIndex="1" />
      </StackPanel>
    </Border>

    <Button Content="OK" IsDefault="True" Click="OkClicked" TabIndex="2" Margin="8" MinWidth="128"
            HorizontalAlignment="Center" />

  </StackPanel>
</Window>