<Window x:Class="Octgn.MessageWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="OCTGN" Width="500" SizeToContent="Height"
        Style="{StaticResource DialogWindow}" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        x:Name="Me">
  <Grid Margin="4">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Border Style="{StaticResource Panel}" Margin="0,0,0,4" Padding="4">
      <TextBlock x:Name="contentBlock" VerticalAlignment="Top" Margin="0,0,0,8" />
    </Border>

    <Button x:Name="okBtn" Content="OK" MinWidth="100" Click="OkClicked" HorizontalAlignment="Center"
            VerticalAlignment="Bottom" Grid.Row="1" />
  </Grid>
</Window>