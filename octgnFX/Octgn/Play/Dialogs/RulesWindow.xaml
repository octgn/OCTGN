<Window x:Class="Octgn.Play.Dialogs.RulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Rules" Height="304" Width="575" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Loaded="Window_Loaded">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <TextBlock Text="Find: " DockPanel.Dock="Left" VerticalAlignment="Top" Margin="3,3,0,0" />
            <TextBox x:Name="search" MaxLines="1"  PreviewKeyDown="FindText" />
        </DockPanel>
        <ScrollViewer x:Name="scroller">
            <RichTextBox x:Name="rules" VerticalAlignment="Top" PreviewKeyDown="FindNext" />           
        </ScrollViewer>
    </DockPanel>
</Window>
