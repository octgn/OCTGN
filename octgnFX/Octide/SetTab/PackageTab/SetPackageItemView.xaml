<UserControl x:Class="Octide.Views.SetPackageItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gong="urn:gong-wpf-dragdrop"
             mc:Ignorable="d" 
             xmlns:ItemModel="clr-namespace:Octide.ItemModel"
             xmlns:View="clr-namespace:Octide.Views"
             xmlns:local="clr-namespace:Octide"
             xmlns:params="http://schemas.codeplex.com/elysium/params"
             params:Design.Theme="Dark"
             d:DesignHeight="500" d:DesignWidth="700">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Foreground" Value="Yellow" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="MinWidth" Value="20" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        <HierarchicalDataTemplate DataType="{x:Type ItemModel:PackIncludeItemModel}" ItemsSource="{Binding Items}" >
            <Border Padding="3" Margin="1" Background="{StaticResource BlendBrushRed}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="INCLUDE" FontWeight="Bold" />
                    <TextBlock Text="set:" Margin="3,0,3,0 "/>
                    <ComboBox IsReadOnly="True" Padding="1" FontSize="11" MinWidth="100" ItemsSource="{Binding Sets}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedSet, Mode=TwoWay}" />
                    <TextBlock Text="card:" Margin="3,0,3,0"  />
                    <ComboBox IsReadOnly="True" Padding="1" FontSize="11" MinWidth="100" ItemsSource="{Binding Cards}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedCard, Mode=TwoWay}" />
                </StackPanel>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add Property" Background="{StaticResource BlendBrushYellow}" Command="{Binding AddPropertyCommand}" />
                        <MenuItem Header="Delete" Command="{Binding RemoveCommand}" />
                    </ContextMenu>
                </Border.ContextMenu>
            </Border>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type ItemModel:PackOptionsItemModel}" ItemsSource="{Binding Items}" >
            <Border Margin="1" Padding="3" Background="{StaticResource BlendBrushPurple}">
                <TextBlock Text="OPTIONS" FontWeight="Bold" />
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add Option" Background="{StaticResource BlendBrushBlue}" Command="{Binding AddOptionCommand}" />
                        <MenuItem Header="Delete" Command="{Binding RemoveCommand}" />
                    </ContextMenu>
                </Border.ContextMenu>
            </Border>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type ItemModel:PackOptionItemModel}" ItemsSource="{Binding Items}" >
            <Border Margin="1" Padding="3" Background="{StaticResource BlendBrushBlue}" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="OPTION" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="probability:" Margin="3,0,3,0" />
                    <TextBox Grid.Column="2" Text="{Binding Probability}" MinWidth="50" />
                </StackPanel>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add Options" Background="{StaticResource BlendBrushPurple}" Command="{Binding AddOptionsCommand}" />
                        <MenuItem Header="Add Pick" Background="{StaticResource BlendBrushGreen}" Command="{Binding AddPickCommand}" />
                        <MenuItem Header="Delete" Command="{Binding RemoveCommand}" />
                    </ContextMenu>
                </Border.ContextMenu>
            </Border>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type ItemModel:PackPickItemModel}" ItemsSource="{Binding Items}" >
            <Border Margin="1" Padding="3" Background="{StaticResource BlendBrushGreen}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="PICK" FontWeight="Bold" />
                    <TextBlock Text="quantity:" Margin="3,0,3,0"/>
                    <TextBox Text="{Binding Quantity}" MinWidth="20" >
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="IsEnabled" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=UnlimitedBox, Path=IsChecked}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock Text="unlimited:" Margin="3,0,3,0" />
                    <CheckBox x:Name="UnlimitedBox" IsChecked="{Binding IsUnlimited, Mode=TwoWay}" />
                </StackPanel>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add Property" Background="{StaticResource BlendBrushYellow}" Command="{Binding AddPropertyCommand}" />
                        <MenuItem Header="Delete" Command="{Binding RemoveCommand}" />
                    </ContextMenu>
                </Border.ContextMenu>
            </Border>
        </HierarchicalDataTemplate>
        <DataTemplate DataType="{x:Type ItemModel:PackPropertyItemModel}" >
            <Border Padding="3" Margin="1" Background="{StaticResource BlendBrushYellow}" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="PROPERTY" FontWeight="Bold" />
                    <TextBlock Text="name:" Margin="3,0,3,0"/>
                    <ComboBox IsReadOnly="True" Padding="1" FontSize="11" MinWidth="80" ItemsSource="{Binding CustomProperties}" DisplayMemberPath="Name" SelectedItem="{Binding ActiveProperty, Mode=TwoWay}" />
                    <TextBlock Text="value:" Margin="3,0,3,0"/>
                    <TextBox Text="{Binding Value}" MinWidth="100"/>
                </StackPanel>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Delete" Command="{Binding RemoveCommand}" />
                    </ContextMenu>
                </Border.ContextMenu>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="100"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="100"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.ColumnSpan="2" Text="Pack Items"  HorizontalAlignment="Center" FontSize="20"/>
            <Button Grid.Row="1" Content="Add Options"  Margin="1" Command="{Binding AddOptionsCommand}" Background="{StaticResource BlendBrushPurple}" />
            <Button Grid.Row="1" Grid.Column="1" Content="Add Pick"  Margin="1" Command="{Binding AddPickCommand}" Background="{StaticResource BlendBrushYellow}"/>
            <TreeView Grid.Row="2" Grid.ColumnSpan="2" Background="Transparent" ItemsSource="{Binding Items}" Name="PackItems"
                              gong:DragDrop.IsDragSource="True" gong:DragDrop.IsDropTarget="True" gong:DragDrop.DropHandler="{Binding PackageDropHandler}" gong:DragDrop.DragDropCopyKeyState="ControlKey" >
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="True" />
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Grid>

        <GridSplitter Grid.Row="1" ResizeDirection="Rows" />

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Include cards (from other sets)"  HorizontalAlignment="Center" FontSize="20"/>
            <Button Grid.Row="1" Content="Add Include" Margin="1" Command="{Binding AddIncludeCommand}" Background="{DynamicResource BlendBrushRed}" />

            <TreeView Grid.Row="2" Background="Transparent" ItemsSource="{Binding Includes}"  Name="Includes"
                              gong:DragDrop.IsDragSource="True" gong:DragDrop.IsDropTarget="True" gong:DragDrop.DropHandler="{Binding IncludeDropHandler}" gong:DragDrop.DragDropCopyKeyState="ControlKey" >
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="True" />
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Grid>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.RowSpan="3">
            <Button Content="Generate Pack" HorizontalAlignment="Center" VerticalAlignment="Bottom" Command="{Binding GeneratePackCommand}" />


            <ListBox ItemsSource="{Binding BoosterCards}"
                 Focusable="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Image Source="{Binding }" Height="180" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
